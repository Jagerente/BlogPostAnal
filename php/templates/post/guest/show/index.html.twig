{% extends 'base.html.twig' %}

{% block title %}Post
{% endblock %}

{% block body %}
	<link href="{{ asset('css/components/posts/post_details.css') }}" rel="stylesheet"/>

	<div class="post-details">
		<h1 class="post-details__title">{{ post.title }}</h1>
		<div class="post-details__content">
			<p class="post-details__body">{{ post.body }}</p>
		</div>

		<div class="post-details__meta">
			<p class="post-details__created-at">Created at:
				{{ post.createdAt ? post.createdAt|date('Y-m-d H:i:s') : '' }}</p>
			<p class="post-details__author">Written by:
				{{ post.author.username }}</p>
		</div>
	</div>

	{{ include('post/_buttons/_back_to_list.html.twig') }}
{% endblock %}
