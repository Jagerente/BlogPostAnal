{% extends 'base.html.twig' %}

{% block title %}Edit Post
{% endblock %}

{% block body %}
	{{ include('css/post_form.html.twig') }}

	<div class="post-form">
		<h1 class="post-form__title">Edit Post</h1>

		{{ form_start(form, {'attr': {'class': 'post-form'}}) }}

		<div class="post-form__field">
			{{ form_label(form.title, 'Title', {'label_attr': {'class': 'post-form__label'}}) }}
			{{ form_widget(form.title, {'attr': {'class': 'post-form__input'}}) }}
		</div>

		<div class="post-form__field">
			{{ form_label(form.body, 'Body', {'label_attr': {'class': 'post-form__label'}}) }}
			{{ form_widget(form.body, {'attr': {'class': 'post-form__textarea'}}) }}
		</div>

		<div class="post-form__actions">
			<button type="submit" class="post-form__button btn">Save</button>
			{{ include('post/buttons/_back_to_list.html.twig') }}
		</div>
		{{ form_end(form) }}

		{{ include('post/buttons/_delete_post.html.twig', {'id': post.id}) }}

	</div>
</div>{% endblock %}
